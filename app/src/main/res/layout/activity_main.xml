<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="764dp"
        android:layout_height="377dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/red_rel_layout"
            android:layout_width="380dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/red_frame_in"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="108dp"
                app:srcCompat="@drawable/red_frame" />

            <Button
                android:id="@+id/up_red"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="49dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="34dp"
                android:backgroundTint="#B60000"
                android:onClick="onRedClick"
                android:text="Увеличить"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/red_count"
                android:layout_width="255dp"
                android:layout_height="261dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="112dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ff0000"
                android:textSize="100dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blue_rel_layout"
            android:layout_width="380dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blue_frame_in"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="108dp"
                app:srcCompat="@drawable/blue_frame" />

            <Button
                android:id="@+id/up_blue"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="49dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="34dp"
                android:backgroundTint="#0000B6"
                android:onClick="onBlueClick"
                android:text="Увеличить"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/blue_count"
                android:layout_width="255dp"
                android:layout_height="261dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="112dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#0000ff"
                android:textSize="100dp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>